pipeline {
    agent any

    stages {
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t day20-jenkins-app .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker rm -f day20 || true'
                sh 'docker run -d --name day20 -p 8081:80 day20-jenkins-app'
            }
        }
    }
}
